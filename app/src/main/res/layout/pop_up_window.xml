<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="@drawable/border"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <TextView
        android:id="@+id/pou_up_tv"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record your exercise"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/open_sans"
        android:textSize="22sp"
        android:gravity="center_horizontal" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/pou_up_tv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sets:"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/open_sans"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />


        <EditText
            android:id="@+id/sets_ed"
            android:layout_width="60dp"

            android:layout_row="0"
            android:layout_column="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetitions:"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/open_sans"
            android:textSize="20sp"
            android:layout_marginStart="30dp" />

        <EditText
            android:id="@+id/reps_ed"
            android:layout_width="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:textAlignment="center" />
    </GridLayout>

    <TextView
        android:id="@+id/date_tv"
        android:layout_marginTop="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/open_sans"
        android:textSize="20sp"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/like_btn"
        android:text="Cancel"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/buttonselect"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/finish_btn"
        android:layout_toRightOf="@+id/like_btn"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="220dp"
        android:text="Finish"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/like_btn"
        android:layout_marginStart="75dp"
        android:background="@drawable/buttonselect"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>