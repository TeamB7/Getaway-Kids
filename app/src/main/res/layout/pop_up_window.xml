<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:background="@drawable/popbox_background_dark"
    android:elevation="12dp">

    <TextView
        android:id="@+id/pou_up_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:text="Enter workout details"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/open_sans" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pou_up_tv"
        android:layout_marginTop="25dp"
        android:background="@drawable/popbox_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans"
            android:text="Sets:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/sets_ed"
            android:layout_width="60dp"

            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:hint="00"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans"
            android:text="Repetitions:"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/open_sans" />

        <EditText
            android:id="@+id/reps_ed"
            android:layout_width="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:hint="00"
            android:textAlignment="center" />
    </GridLayout>

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/open_sans"
        android:text="Date:"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/like_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/buttonselect"
        android:text="Cancel"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="220dp"
        android:layout_toEndOf="@+id/like_btn"
        android:layout_toRightOf="@+id/like_btn"
        android:background="@drawable/buttonselect"
        android:text="Save"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>