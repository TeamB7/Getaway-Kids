        <LinearLayout
            android:id="@+id/safety_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_security"
            android:background="@color/design_default_color_surface"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Title, secondary and supporting text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/open_sans"
                android:text="Suburb Safety Information"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/suburb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:text="Your Suburb:"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/open_sans"
                android:text="Risk Score:"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_crime_loc"
                android:layout_width="230dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:text="View Crime Location Type"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_crime_loc"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/relLayout_main">

        <Button
            android:id="@+id/btn_Security"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
