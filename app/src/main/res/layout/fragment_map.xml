<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="4dp">

    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:fontFamily="@font/open_sans"-->
    <!--        android:text="On Your Toes"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textAppearance="@style/TextAppearance.AppCompat.Large"-->
    <!--        android:textColor="#f5555f"-->
    <!--        android:textSize="20sp"-->
    <!--        android:gravity="center_horizontal" />-->

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title">

        <Button
            android:id="@+id/search_facilities"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/ed_search"
            android:layout_marginLeft="320dp"
            android:background="@drawable/rounded_button"
            android:text="Done"
            android:textSize="12sp" />

        <!--        <Spinner-->
        <!--            android:id="@+id/sp_facility_type"-->
        <!--            android:layout_width="174dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_alignParentLeft="@+id/ed_search"-->
        <!--            android:layout_marginLeft="182dp"-->
        <!--            android:layout_marginRight="-175dp"-->
        <!--            android:hint="Choose facility type"-->
        <!--            android:imeOptions="actionSearch"-->
        <!--            android:spinnerMode="dropdown"-->
        <!--            android:textColor="#000"-->
        <!--            android:textSize="15sp" />-->

        <EditText
            android:id="@+id/ed_search"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter address"
            android:imeOptions="actionSearch"
            android:textColor="#000000"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/relLayout1">

        <com.google.android.material.chip.Chip
            android:id="@+id/btParks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Parks" />

        <com.google.android.material.chip.Chip
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignRight="@id/btParks"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:text="recreational Facility" />
    </RelativeLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:gravity="center_horizontal"
        android:text="Search Nearby Facility"
        android:textAlignment="center"
        android:textSize="20sp" />


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_below="@+id/relLayout2"
        android:layout_marginTop="9dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/map"
        android:background="#DFE3E0E0"
        android:fitsSystemWindows="true"
        android:fontFamily="@font/open_sans_light"
        android:hapticFeedbackEnabled="true"
        app:itemIconTint="@drawable/icon_selected"
        app:itemTextColor="@drawable/icon_selected"
        app:menu="@menu/menu_bot_nav" />



</RelativeLayout>
