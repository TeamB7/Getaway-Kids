<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popbox_background_dark"
    android:elevation="5dp">

    <TextView
        android:id="@+id/pou_up_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans"
        android:gravity="center_horizontal"
        android:text="How to make it "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:fontFamily="@font/open_sans" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_below="@+id/pou_up_tv"
        android:layout_marginTop="30dp"
        android:background="@drawable/popbox_background">

        <TextView
            android:id="@+id/notes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center|center_horizontal|center_vertical"
            android:justificationMode="inter_word"
            android:text="Easier: Don't Jump after, and break down motion squat, step legs back and no pushup  Harder: Speed "
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:fontFamily="@font/open_sans" />


    </GridLayout>

    <Button
        android:id="@+id/close_popup"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/buttonselect"
        android:gravity="center"
        android:text="Ok, I got it!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>